<%- include('./layouts/header.ejs') %>

<div class="container">
  <form action="/login" method="post" class="mx-auto py-5 shadow p-5">
    <h4 class="text-center">Login</h4>
    <hr />
    <% if (message) { %>
    <div
      class="alert text-center alert-dismissible fade show alert-<%= message.type %> mt-2"
      role="alert"
    >
      <button
        class="btn-close"
        type="button"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
      <strong><%= message.message %></strong>
    </div>
    <% } %>
    <div class="mb-3 mt-5">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        aria-describedby="emailHelp"
        required
        autocomplete="off"
      />
    </div>
    <div class="mb-3">
      <label for="password" class="form-label color-signup-password"
        >Password</label
      >
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      />
    </div>

    <div class="d-flex justify-content-center mt-5">
      <button type="submit" class="btn btn-primary">Entrar</button>
    </div>
    <p id="emailHelp" class="form-label mt-4 text-center">
      NÃ£o possui uma conta? <a href="/signup">Cadastrar-se</a>
    </p>
  </form>
</div>

<%- include('./layouts/footer.ejs') %>
